<% if !@task && !@product_test %>
  <h1>Master Patient List</h1>
<% else %>
  <h1>Patient List</h1>
<% end %>
<div class="row">
  <% if !@task && !@product_test %>
  <div class="col-md-5">
    <h1>Annual Update Bundle</h1>
      <% if Bundle.count == 1 %>
        <!-- label --> <%= @bundle.title %>
      <% else %>
        <!-- loop through bundles & use radio buttons -->
        <%= bootstrap_form_tag do |f| %>
        <%= f.form_group :bundle_id do %>
          <% Bundle.all.each do |bundle| %>
            <%= f.radio_button :bundle_id, bundle.id, label: bundle.title, label_class: "btn btn-checkbox", 
                               checked: bundle == @bundle %>

          <% end # bundle loop %>
        <% end # form_group %>
        <% end %>
      <% end # bundles.count %>
    <h1>Filter by Measure</h1>
    <label for="measure_id" class="sr-only">Filter the Master Patient List</label>
    <%= select_tag(:measure_id, options_for_select(@measures.map { |m| [m.display_name, by_measure_bundle_records_path(@bundle, :measure_id => m.hqmf_id, :sub_id => m.sub_id)] } ), class: 'form-control', include_blank: 'All measures') %>
  </div>
  <% end %>
  <div id="records_list" class="col-md-7">
    <%= render partial: 'records_list', locals: { records: @records } %>
  </div>
</div>
