<%
# remove_button partial should be used with remove_modal partial.
#   remove_modal partial should be used once at the top of a page while
#   remove_button partial can be used multiple times in a page
#
# parameters:
#   button_text     String  ex.) 'remove', [optional]
#   button_classes  String  ex.) 'btn btn-default', [optional]
#   object          Object  ex.) @product, (object class must have .name field)
#   object_path     String  ex.) vendor_product_path(@product.vendor, @product)
#   modal_message   String  ex.) 'Removing a product will aslo delete all
#                                 associated product tests and test results.'
%>

<% button_text ||= '' %>
<% button_classes ||= '' %>

<%= form_tag(object_path, method: 'delete') do %>
  <%= button_tag button_text, type: 'button', class: button_classes, data: { toggle: 'modal', target: '#remove_modal', object_type: object.class.name.downcase, object_name: object.name, message: modal_message } %>
<% end %>