<dl class="dl-horizontal product-information">
  <dt>Product</dt>
  <dd><%= product.name %></dd>
  <% unless product.version.blank? %>
    <dt>Version</dt>
    <dd><%= product.version %></dd>
  <% end %>
  <% unless product.description.blank? %>
    <dt>Description</dt>
    <dd><%= product.description %></dd>
  <% end %>
  <dt>Vendor</dt>
  <dd><%= link_to "#{product.vendor.name}", [product.vendor] %></dd>
</dl>
